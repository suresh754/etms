      <input type="text" class="form-control" id="designation" placeholder="Enter designation" name="designation">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="numOfEmployees">No. Of Employee:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="numOfEmployees" placeholder="Enter no. of employees required" name="numOfEmployees">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="numOfDays">No. Of Days:</label>
